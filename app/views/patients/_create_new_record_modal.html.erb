<div class="modal fade" id="createNewRecordModal" tabindex="-1" role="dialog" aria-labelledby="createNewRecordModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" >Create New Department</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_with(model: PatientRecord.new, url: patient_patient_records_path(@current_patient.id), local: true) do |f| %>
    			<%= f.text_field :title %>
          <%= f.text_field :content %>
      </div>
      <div class="modal-footer">
      	<%= f.submit "Add Record", :class => "btn btn-superuser" %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    		<% end %>
      </div>
    </div>
  </div>
</div>