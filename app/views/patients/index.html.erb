<h1>Patients</h1>

<div class="card">
	<div class="card-body">

		<div class="input-group mb-3">
			<div class="input-group-prepend">
				<span class="input-group-text" style="color: #ff000;">Search</span>
			</div>
			<input type="text" id="patient-searchbox" class="form-control" placeholder="Name or Doctor..." onkeyup="patientSearch()">
		</div>

		<% Patient.all.each do |patient| %>
			<%= render partial: 'patient_card', locals: {patient: patient} %>
		<% end %>

	</div>
</div>

<%= javascript_include_tag "patient_index" %>