<h2>Register</h2>
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= f.email_field :email, autocomplete: "email", autofocus: true, placeholder: "Email Address", hide_label: true %>

  <%= f.text_field :first_name, placeholder: "First Name", hide_label: true %>

  <%= f.text_field :last_name, placeholder: "Last Name", hide_label: true %>

  <br>
  <%= f.password_field :password, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)", hide_label: true %>

  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", hide_label: true %>

  <%= f.submit "Complete Registration", :class => "btn btn-secondary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>