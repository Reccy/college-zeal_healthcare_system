<h2>Login</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-group") do |f| %>
	<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
	<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
	<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
	
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", hide_label: true %>

    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", hide_label: true %>

  <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %>
  <% end -%>

  <br>
  <%= f.submit "Log in", :class => "btn btn-secondary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
