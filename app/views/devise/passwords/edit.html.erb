<h2>Change your password</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New Passsword (#{@minimum_password_length} characters minimum)", hide_label: true %>

  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password", hide_label: true %>

  <%= f.submit "Change my password" %>
<% end %>

<%= render "devise/shared/links" %>
