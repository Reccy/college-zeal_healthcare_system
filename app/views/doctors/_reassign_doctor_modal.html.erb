<div class="modal fade" id="reassignDoctorModal-<%= patient.id %>" tabindex="-1" role="dialog" aria-labelledby="reassignDoctorModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Reassign Doctor for <%= patient.full_name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<%= bootstrap_form_with(model: patient, url: patient_assign_doctor_path(patient.id), local: true) do |f| %>
  			<%= f.collection_select(:doctor_id, Doctor.all, :id, :full_name) %>
      </div>
      <div class="modal-footer">
      		<%= f.submit "Save", :class => "btn btn-superuser" %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
