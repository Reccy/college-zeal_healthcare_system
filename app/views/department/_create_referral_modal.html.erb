<div class="modal fade" id="createReferralModal" tabindex="-1" role="dialog" aria-labelledby="createReferralModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" >Create Referral</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_with(model: Referral.new, url: medical_facility_department_referrals_path(@current_facility.id, @current_department.id), local: true) do |f| %>
          <%= f.collection_select(:patient_id, current_doctor.patients.all, :id, :full_name) %>
          <%= f.text_field :reason %>
      </div>
      <div class="modal-footer">
      	<%= f.submit "Create", :class => "btn btn-superuser" %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    		<% end %>
      </div>
    </div>
  </div>
</div>