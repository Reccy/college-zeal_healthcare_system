<div class="modal fade" id="hireDoctorModal" tabindex="-1" role="dialog" aria-labelledby="hireDoctorModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" >Hire Doctor</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= bootstrap_form_with(model: Doctor.new, url: medical_facility_department_hire_path(@current_facility.id, @current_department.id), local: true) do |f| %>
          <%= f.collection_select(:doctor_id, Doctor.all, :id, :full_name) %>
      </div>
      <div class="modal-footer">
          <%= f.submit "Save", :class => "btn btn-superuser" %>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    		<% end %>
      </div>
    </div>
  </div>
</div>