<div class="card mb-3 audit-card">
	<div class="card-body pb-0">
		<h5><%= entry.entry %></h5>
		<div class="row mb-0">
			<div class="col-sm-12 col-md-4">
				<strong>Subject: </strong><p><%= entry.subject %></p>
			</div>
			<div class="col-sm-12 col-md-4">
				<strong>Author: </strong><p><%= entry.author %></p>
			</div>
			<div class="col-sm-12 col-md-4">
				<strong>Created: </strong><p><%= time_ago_in_words(entry.created_at) %> ago (<%= entry.created_at %>)</p>
			</div>
		</div>
	</div>
</div>